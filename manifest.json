{
    "manifest_version": 3,
    "name": "AI Proposal Pro",
    "version": "1.0.0",
    "description": "Generate professional Upwork proposals using AI in seconds.",
    "permissions": [
        "storage",
        "notifications"
    ],
    "host_permissions": [
        "https://www.upwork.com/*",
        "https://ai-proposal-backend-api.vercel.app/*",
        "https://extensionpay.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.upwork.com/jobs/*",
                "https://www.upwork.com/ab/proposals/job/*"
            ],
            "js": [
                "ExtPay.js",
                "content_script.js",
                "modal.js"
            ],
            "css": [
                "styles.css",
                "modal.css"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://extensionpay.com/*"
            ],
            "js": [
                "ExtPay.js"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*.png",
                "ExtPay.js"
            ],
            "matches": [
                "https://extensionpay.com/*",
                "https://www.upwork.com/*"
            ]
        }
    ]
}